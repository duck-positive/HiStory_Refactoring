<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/quiz_quiz_tv"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="@string/test"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="185dp"
        android:layout_marginStart="53dp"
        android:textSize="21sp"
        />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/quiz_answer_true_iv"
        android:layout_width="93dp"
        android:layout_height="93dp"
        android:background="@drawable/quiz_answer_true_selector"
        app:layout_constraintStart_toStartOf="@+id/question_next_iv"
        app:layout_constraintTop_toBottomOf="@id/quiz_quiz_tv"
        android:layout_marginTop="133dp"
        />
    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/quiz_answer_false_iv"
        android:layout_width="93dp"
        android:layout_height="93dp"
        android:background="@drawable/quiz_answer_false_selector"
        app:layout_constraintEnd_toEndOf="@+id/question_next_iv"
        app:layout_constraintTop_toTopOf="@id/quiz_answer_true_iv" />

    <ImageView
        android:id="@+id/question_next_iv"
        android:layout_width="290dp"
        android:layout_height="40dp"
        android:src="@drawable/next_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="80dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>