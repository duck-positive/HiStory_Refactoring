<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/question_answer_tv"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="합격입니다!\n다음 문제도 함께 풀어볼까요?"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="140dp"
        android:layout_marginStart="60dp"
        android:textSize="21sp"
        />
    <TextView
        android:id="@+id/question_solution_tv"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        android:textColor="@color/black"
        android:text="합격입니다! 다음 문제도 함께 풀어볼까요?"
        app:layout_constraintTop_toTopOf="@id/question_solution_iv"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="60dp"
        android:paddingHorizontal="13dp"
        android:layout_marginTop="40dp"
        android:textSize="18sp"
        />
    <ImageView
        android:id="@+id/question_solution_iv"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/question_answer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/question_answer_tv"
        />
    <Button
        android:id="@+id/quetion_answer_next_btn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/button_round"
        android:layout_marginHorizontal="50dp"
        android:layout_marginBottom="80dp"
        android:text="@string/next"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>